{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Float",
  "version": "0.1.0",
  "identifier": "com.havesomecode.float",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "assetProtocol": {
        "scope": [
          "/**"
        ]
      }
    },
    "windows": [
      {
        "title": "Float",
        "label": "main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": true,
        "focus": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg",
      "nsis"
    ],
    "icon": [],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  }
}
